<div class="container">


  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'errors' %>
      <%= form_with(model: @article, local: true, class: "shadow p-5  mb-5 bg-body rounded") do |form| %>
        <div class="form-group row mb-3">
          <%= form.label :title, class: "col-form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :description, class: "col-form-label article-descr-input"%>
          <%= form.text_area :description, rows: 10, class: "form-control" %>             
        </div>

        <div class="form-group row mb-3 justify-content-center">
          <%= form.submit class: "btn btn-success col-9 col-sm-5" %>
        </div>
        

      <% end %>
      
    </div>

    <%= link_to "Cancel and back to articles listing", articles_path, class: "mb-5 text-center" %>    

  </div>

</div>
