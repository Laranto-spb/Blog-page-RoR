<div class="container">
  <%= render 'errors' %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, local: true, class: "shadow p-3 mb-5 bg-body rounded pt-4") do |form| %>
        <div class="form-group row mb-3">
          <%= form.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control" %> 
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :description, class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control" %>      
          </div>
        </div>

        <div class="form-group row mb-3 justify-content-center">
          <%= form.submit class: "btn btn-success col-2" %>
        </div>
        

      <% end %>
      
    </div>

    <%= link_to "Cancel and back to articles listing", articles_path, class: "mb-5 text-center" %>    

  </div>

</div>
