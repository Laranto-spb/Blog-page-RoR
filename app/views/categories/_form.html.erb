<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, local: true, class: "shadow p-5  mb-5 bg-body rounded") do |form| %>
        <div class="form-group row mb-3">
          <%= form.label :name, class: "col-form-label" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter name of category" %>
        </div>

        <div class="form-group row mb-3 justify-content-center">
          <%= form.submit "Create", class: "btn btn-success col-9 col-sm-5" %>
        </div>
        
      <% end %>
      
    </div>

    <%= link_to "Cancel and back to articles listing", articles_path, class: "mb-5 text-center" %>    
  </div>
</div>