<h1 class="text-center mt-4 mb-4">Listing of categories</h1>
<div class="container mb-5">
  <div class="apple_pagination mb-4">
      <%= will_paginate @categories, :container => false %>
  </div>
  <% if @categories.any? %>
    <% @categories.each do |category|  %>
      <div class="row justify-content-center">
        <div class="col-8 mb-4">
          <div class="card text-center shadow mb-5 bg-body rounded">
            <div class="card-body">
              <h5 class="card-title"><%= link_to category.name, category_path(category.id), class: "text-success" %></h5>
              <%= pluralize(category.articles.count, 'article') %>
            </div>
            <div class="card-footer text-muted">
              <small> Created <%= time_ago_in_words(category.created_at) %> ago </small> |
              <small> Edited <%= time_ago_in_words(category.updated_at) %> ago </small>
            </div>
          </div>       
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="row justify-content-center">
      <p class="text-secondary text-center">No categories yet...</p>
    </div>
  <%end%>
  <div class="apple_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
  </div>  
</div>